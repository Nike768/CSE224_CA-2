<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Course Registration Form"
        android:textColor="@color/red2"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name"
        android:textSize="20dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/red2"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt1"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:hint="Enter your full name"
        android:inputType="text"
        android:textColor="@color/red2"
        android:backgroundTint="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Reg_no"
        android:text="Registration No."
        android:textSize="20dp"
        android:textColor="@color/red2"
        android:layout_below="@id/edt1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt2"
        android:inputType="number"
        android:textColor="@color/red2"
        android:layout_below="@id/Reg_no"
        android:layout_marginLeft="20dp"
        android:hint="Enter reg no."
        android:backgroundTint="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:text="Gender"
        android:textSize="20dp"
        android:textColor="@color/red2"
        android:layout_below="@id/edt2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg1"
        android:layout_below="@+id/gender"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:layout_marginLeft="20dp"
            android:text="Male"
            android:buttonTint="@color/black"
            android:textColor="@color/red2"
            android:textSize="20dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:buttonTint="@color/black"
            android:layout_marginLeft="20dp"
            android:text="Female"
            android:textColor="@color/red2"
            android:textSize="20dp"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courses"
        android:layout_below="@+id/rg1"
        android:layout_marginLeft="20dp"
        android:text="Courses"
        android:textSize="20dp"
        android:textColor="@color/red2"
        android:layout_marginTop="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/android"
        android:layout_below="@+id/courses"
        android:layout_marginLeft="20dp"
        android:buttonTint="@color/black"
        android:text="Android"
        android:textColor="@color/red2"
        android:textSize="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cyber"
        android:layout_below="@+id/courses"
        android:layout_toRightOf="@id/android"
        android:layout_marginLeft="20dp"
        android:buttonTint="@color/black"
        android:text="Cyber Security"
        android:textColor="@color/red2"
        android:textSize="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Datasci"
        android:layout_below="@+id/android"
        android:layout_marginLeft="20dp"
        android:buttonTint="@color/black"
        android:text="Data Science"
        android:textColor="@color/red2"
        android:textSize="20dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iot"
        android:layout_below="@+id/android"
        android:layout_toRightOf="@id/Datasci"
        android:layout_marginLeft="20dp"
        android:buttonTint="@color/black"
        android:text="IOT"
        android:textColor="@color/red2"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Datasci"
        android:text="Submit"
        android:layout_marginLeft="150dp"
        android:textColor="@color/red2"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
</RelativeLayout>